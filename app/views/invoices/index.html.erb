<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:recipient) %></th>
      <th><%= model_class.human_attribute_name(:identifier) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= link_to invoice.recipient.name, invoice.recipient %></td>
        <td><%= invoice.identifier %></td>
        <td><%= invoice.amount %></td>
        <td>
          <%= link_to t('.show', default: t("helpers.links.show")),
                      invoice_path(invoice), class: 'btn btn-mini btn-info' %>
          <%= link_to t('.edit', default: t("helpers.links.edit")),
                      edit_invoice_path(invoice), class: 'btn btn-mini btn-success' %>
          <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                      invoice_path(invoice),
                      method: :delete,
                      data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                      class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")), new_invoice_path, class: 'btn btn-primary' %>
