<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:recipient) %>:</strong></dt>
  <dd><%= link_to @invoice.recipient.name, @invoice.recipient %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recipient_type) %>:</strong></dt>
  <dd><%= @invoice.recipient_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:identifier) %>:</strong></dt>
  <dd><%= @invoice.identifier %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @invoice.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ordered_at) %>:</strong></dt>
  <dd><%= @invoice.ordered_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoiced_at) %>:</strong></dt>
  <dd><%= display_value(@invoice.invoiced_at) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipped_at) %>:</strong></dt>
  <dd><%= display_value(@invoice.shipped_at) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivered_at) %>:</strong></dt>
  <dd><%= display_value(@invoice.delivered_at) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_rules) %>:</strong></dt>
  <dd>
   <ul>
    <%- @invoice.payment_rules.each do |rule| -%>
     <li><%= link_to rule.name, rule %></li>
    <%- end -%>
   </ul>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%=l @invoice.created_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%=l @invoice.updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', default: t("helpers.links.back")),
              invoices_path, class: 'btn' %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_invoice_path(@invoice), class: 'btn' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              invoice_path(@invoice),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>
