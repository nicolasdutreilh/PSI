<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= mail_to user.email %></td>
        <td><%= user.admin %></td>
        <td>
          <%= link_to t('.show', default: t("helpers.links.show")),
                      account_path(user), class: 'btn btn-mini btn-info' %>
          <%= link_to t('.edit', default: t("helpers.links.edit")),
                      edit_account_path(user), class: 'btn btn-mini btn-success' %>
          <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                      account_path(user),
                      method: :delete,
                      data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                      class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")), new_account_path, class: 'btn btn-primary' %>
