<%- model_class = PaymentRule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:percent) %></th>
      <th><%= model_class.human_attribute_name(:period) %></th>
      <th><%= model_class.human_attribute_name(:end_of_month) %></th>
      <th><%= model_class.human_attribute_name(:since) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @payment_rules.each do |payment_rule| %>
      <tr>
        <td><%= payment_rule.name %></td>
        <td><%= payment_rule.percent %></td>
        <td><%= payment_rule.period %></td>
        <td><%= payment_rule.end_of_month %></td>
        <td><%= payment_rule.since_name %></td>
        <td>
          <%= link_to t('.show', default: t("helpers.links.show")),
                      payment_rule_path(payment_rule), class: 'btn btn-mini btn-info' %>
          <%= link_to t('.edit', default: t("helpers.links.edit")),
                      edit_payment_rule_path(payment_rule), class: 'btn btn-mini btn-success' %>
          <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                      payment_rule_path(payment_rule),
                      method: :delete,
                      data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                      class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")), new_payment_rule_path, class: 'btn btn-primary' %>
