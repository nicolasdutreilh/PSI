<%- model_class = PaymentRule -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @payment_rule.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:percent) %>:</strong></dt>
  <dd><%= @payment_rule.percent %></dd>
  <dt><strong><%= model_class.human_attribute_name(:period) %>:</strong></dt>
  <dd><%= @payment_rule.period %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_of_month) %>:</strong></dt>
  <dd><%= @payment_rule.end_of_month %></dd>
  <dt><strong><%= model_class.human_attribute_name(:since) %>:</strong></dt>
  <dd><%= @payment_rule.since_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%=l @payment_rule.created_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%=l @payment_rule.updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', default: t("helpers.links.back")),
              payment_rules_path, class: 'btn' %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_payment_rule_path(@payment_rule), class: 'btn' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              payment_rule_path(@payment_rule),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>
